<div class="show-banner nav-fix" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(<%=@church.photo.attached? ? cl_image_path(@church.photo.key) : image_path("https://source.unsplash.com/1200x800/?church") %>);">
  <div class="container d-flex flex-column justify-content-center">
    <h1><%= @church.name %></h1>
    <p><%= @church.name.capitalize %></p>
  </div>
</div>
<div class="container d-flex">
  <div class="d-flex my-5">
    <div class="church-discription mr-5">
      <div class="church-text-info p-4 rounded">
        <h2><%= @church.name %> is...</h2>
        <p>  <%= @church.name %>  </p>
        <div class="trainer-card mt-4 p-2">

          <div class="trainer-avatar">
            <h4>Trainer: <%= @church.name %></h4>
            <p>  <%= @church.name %>  </p>
          </div>
      </div>
      </div>
      <%= render "shared/map", styling: "width: 100%; height: 350px;", class_name: "map-show" %>
    </div>
    <div class="book-card">
      <div class="align-items-center bg-secondary p-4 rounded" style="box-shadow: 3px 3px 10px rgba(0, 0, 0, .2)" id="override">
        <h3 class="border-bottom">Contact this church! </h3>
        <h2 class="mt-4" style="text-align: right; font-weight: bold"><%= @church.name %></h2>

      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
