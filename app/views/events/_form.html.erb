<%= simple_form_for @event do |f| %>
  <%= f.input :name, label: "Event Name:" %>
  <%= f.input :description, label: "Event Description:" %>
  <%= f.association :church, label: "Host Church:", label_method: :name, collection: Church.where( user: current_user).order('name ASC'), value_method: :id %>
  <%= f.input :location, label: "Address:" %>
  <%= f.input :start, label: "Event Date & Time:", as: :datetime, html5: true%>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Submit", class: "btn btn-gradient" %>
<% end %>
